<!DOCTYPE html>
<html lang="sr">
  <head>
    <meta charset="UTF-8" />
    <title>Uredi Korisnika</title>
    <style>
      body {
        font-family: sans-serif;
        background-color: #f2f2f2;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
      }

      .modal {
        background: white;
        border: 1px solid #ccc;
        width: 400px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        border-radius: 5px;
      }

      .modal-header h2 {
        margin: 0 0 10px 0;
        font-size: 18px;
        text-align: center;
      }

      .modal-body {
        display: flex;
        flex-direction: column;
      }

      .modal-body label {
        margin-top: 10px;
        font-weight: bold;
      }

      .modal-body input[type="text"],
      .modal-body input[type="email"],
      .modal-body input[type="password"] {
        padding: 6px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 3px;
        width: 100%;
        box-sizing: border-box;
      }

      .modal-body input:disabled {
        background-color: #eee;
        color: #555;
      }

      .modal-body input[type="checkbox"] {
        margin-top: 5px;
        transform: scale(1.2);
      }

      .modal-footer {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
      }

      .btn {
        padding: 8px 16px;
        border: none;
        border-radius: 3px;
        font-size: 14px;
        cursor: pointer;
      }

      .btn.save {
        background-color: #5bc0de;
        color: white;
      }

      .btn.cancel {
        background-color: #d9534f;
        color: white;
      }

      .required {
        color: red;
      }

      .note {
        font-size: 12px;
        margin-top: 10px;
        color: #666;
      }
    </style>
  </head>
  <body>
    <div class="modal">
      <div class="modal-header">
        <h2>Uredi Korisnika</h2>
      </div>
      <form class="modal-body" id="editUserForm">
        <input type="hidden" id="userId" value="<%= user._id %>" />

        <label>Korisničko ime: <span class="required">*</span></label>
        <input
          type="text"
          name="username"
          value="<%= user.username %>"
          disabled
        />

        <label>Nova lozinka:</label>
        <input type="password" name="password" placeholder="Lozinka" />

        <label>Ime: <span class="required">*</span></label>
        <input
          type="text"
          name="firstName"
          value="<%= user.firstName %>"
          required
        />

        <label>Prezime: <span class="required">*</span></label>
        <input
          type="text"
          name="lastName"
          value="<%= user.lastName %>"
          required
        />

        <label>E-mail: <span class="required">*</span></label>
        <input type="email" name="email" value="<%= user.mail %>" required />

        <label>Mobilni telefon: <span class="required">*</span></label>
        <input type="text" name="phone" value="<%= user.phone %>" required />

        <div class="modal-footer">
          <button type="submit" class="btn save">Sačuvaj</button>
          <button
            type="button"
            class="btn cancel"
            onclick="window.location.href='/users'"
          >
            Otkaži
          </button>
        </div>
      </form>
      <p class="note"><span class="required">*</span> Obavezna polja</p>
    </div>

    <script>
      document
        .getElementById("editUserForm")
        .addEventListener("submit", async function (e) {
          e.preventDefault();

          const userId = document.getElementById("userId").value;
          const formData = new FormData(this);

          const data = {};
          formData.forEach((value, key) => {
            if (value) data[key] = value; // exclude empty optional fields
          });

          try {
            const res = await fetch(`/users/${userId}`, {
              method: "PATCH",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify(data),
            });

            if (!res.ok) {
              const error = await res.json();
              alert("Greška: " + error.msg);
            } else {
              alert("Korisnik uspešno ažuriran");
              window.location.href = "/users"; // or redirect to user profile
            }
          } catch (err) {
            alert("Došlo je do greške: " + err.message);
          }
        });
    </script>
  </body>
</html>
